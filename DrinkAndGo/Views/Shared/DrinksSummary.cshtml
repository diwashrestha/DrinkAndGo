@model Drink

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="card">
        <img class="img-thumbnail" src="@Model.ImageThumbnailUrl" alt="" />
        <div class="caption">
            <h3 class="float-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a>@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
    </div>
</div>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>@ViewBag.Title</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css">
        <link rel="stylesheet" href="~/Content/site.css" />
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom shadow-sm fixed-top" role="navigation">
        <div class="container">
            <a class="navbar-brand" href="#">DrinkAndGo</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="nav navbar-nav">
                    <li>
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>

                    @await Component.InvokeAsync("CategoryMenu")
                    <li>
                        <a class="nav-link text-dark" asp-controller="Contact" asp-action="Index">Contact Us</a>
                    </li>
                        Cart: @await Component.InvokeAsync("ShoppingCartSummary")
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <div>
        <div class="container body-content" style="padding-top:5em;">
            @RenderBody()
        </div>

        <hr />
        <footer>
            <p class="text-center"><a target="_blank" href="https://github.com/diwashrestha">&copy; 2020 - Diwash Shrestha</a></p>
        </footer>
    </div>
</body>
</html>